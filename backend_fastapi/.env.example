# ============================================
# SENTINEL IA v2.0 - Configuration Exemple
# Copier ce fichier en .env et ajuster les valeurs
# ============================================

# API Configuration
PROJECT_NAME="Sentinel IA API v2.0"
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS - Ajouter vos domaines autoris√©s
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Security - CHANGER EN PRODUCTION !
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database - SQLite (Auth)
SQLITE_DB_PATH=../data/users.db

# Database - ClickHouse (Events)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=sentinel

# Storage - MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=sentinel-media
MINIO_SECURE=False

# AI Models
YOLO_MODEL_PATH=../models/yolov8n.pt
POSE_MODEL_PATH=../models/yolov8n-pose.pt
CONFIDENCE_THRESHOLD=0.5

# Camera Configuration
CAMERA_CONFIG_PATH=../config/cameras.yaml
DETECTION_CONFIG_PATH=../config/detection_config.yaml

# Processing
MAX_WORKERS=4
FRAME_QUEUE_SIZE=30
ENABLE_GPU=True

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=../logs/sentinel_api.log
